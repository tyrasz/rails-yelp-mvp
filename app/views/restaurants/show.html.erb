<h1>Restaurant</h1>
<%= @restaurant.name %>
<%= @restaurant.address %>
<%= @restaurant.phone_number %>
<%= @restaurant.category %>
<hr>
<% @restaurant.reviews.each do |review| %>
    <%= review.rating %>
    <%= review.content %>
    <hr>
<%end %>
<%= render "reviews/form", restaurant: @restaurant, review: @review %>
